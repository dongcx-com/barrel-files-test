{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "include": [
    "tsdown/**/*",
    "vite/**/*",
    "webpack/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}